@model Dish

<h2>Додати нову позицію</h2>

<form asp-action="CreateDish" enctype="multipart/form-data">
    
    <div class="form-group">
        <label>Зображення</label>
        <input type="file" name="imageFile" class="form-control" />
    </div>
    
    <label>Категорія:</label><br />
    <select asp-for="Category" class="form-control">
        <option value="Sushi">Sushi</option>
        <option value="Sets">Sets</option>
        <option value="Hot">Hot</option>
        <option value="Snacks">Snacks</option>
        <option value="Drinks">Drinks</option>
    </select><br /><br />

    <label>Назва:</label><br />
    <input asp-for="Name" required /><br /><br />

    <label>Вага (г):</label><br />
    <input asp-for="Weight" type="number" step="0.1" required /><br /><br />

    <label>Ціна (грн):</label><br />
    <input asp-for="Price" type="number" required /><br /><br />

    <button type="submit">Додати</button>
</form>
