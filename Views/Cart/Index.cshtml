@model List<CartItem>

@if (Model.Count == 0)
{
    <h1 class="order_big_text">Ваш кошик порожній.</h1>
}
else
{
    <table>
        <caption>
            <h2>Кошик</h2>

        </caption>
        <tr style=" font-weight: bold;">
            <th style="width:50%">Назва</th>
            <th style="width:15%">Кількість</th>
            <th style="width:15%">Ціна</th>
            <th style="width:15%">В сумі</th>
            <th style="width:5%">Видалити</th>
        </tr>
        <tbody>
            @foreach (var item in Model)

            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Quantity</td>
                    <td>@item.Price</td>
                    <td>@item.TotalPrice</td>
                    <td>
                        <a href="@Url.Action("RemoveFromCart", "Cart", new { id = item.DishId })">❌</a>
                    </td>
                </tr>
            }
            <tr>
                <th colspan="6" style="text-align:center">
                    <p>Загальна сума: @Model.Sum(i => i.TotalPrice) грн</p>
                </th>
            </tr>
            <tr>
                <th style="width:50%">
                    <p><a href="@Url.Action("ClearCart", "Cart")" style="color:black">Очистити кошик</a></p>
                </th>
                <th colspan="5" style="width:50%">
                    <p><a href="@Url.Action("Checkout", "Order")" style="color:black">Оформити замовлення</a></p>
                </th>
            </tr>
        </tbody>

    </table>




}