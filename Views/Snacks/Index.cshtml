@{
	ViewData["Title"] = "Snaks";
}
@model List<Dish>

<div class="catalog">
	@if (Model != null)
	{
		@foreach (var dish in Model)
			@if (dish.Category == "Snaks")
			{
				{
					<div class="block">
						<div class="section1">
							<img class="catalog-img" src="../img/snaks/@(dish.Id).png" alt="">
							<h1 class="description">
								@dish.Name <br> @dish.Weight г <br> @dish.Price грн
							</h1>
						</div>
					</div>
				}
			}
	}
	else
	{
		<p>No data available</p>
	}
</div>