@{
	ViewData["Title"] = "Sushi";
}
@model List<Dish>
	<div class="catalog">
	@if (Model != null)
	{
		@foreach (var dish in Model)
			@if(dish.Category == "Sushi")
			{
				{
					<div class="block">
						<div class="section1">
							<img class="catalog-img" src="~/Img/Sushi/@(dish.Id).png" alt="">
							<h1 class="description">
								@dish.Name <br> @dish.Weight г <br> @dish.Price грн
								<br><br><a href="@Url.Action("AddToCart", "Cart", new { id = dish.Id })" class="action_btn">Додати в кошик</a>
							</h1>
							
						</div>
					</div>
				}
			}
	}
	else
	{
		<p>No data available</p>
	}
	</div>